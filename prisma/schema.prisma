// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 用户模型
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(MEMBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  plantCare     PlantCare[]
  checkIns      CheckIn[]
}

// 角色枚举
enum Role {
  ADMIN
  MEMBER
  GUEST
}

// 植物模型
model Plant {
  id            String    @id @default(cuid())
  name          String
  description   String?
  imageUrl      String?
  waterAmount   String?   // 浇水量
  waterSchedule String?   // 浇水时间/频率
  careNotes     String?   // 照顾注意事项
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  plantCare     PlantCare[]
  checkIns      CheckIn[]
}

// 植物照顾分配模型
model PlantCare {
  id            String    @id @default(cuid())
  userId        String
  plantId       String
  startDate     DateTime
  endDate       DateTime?
  taskType      String?   // 任务类型：浇水、施肥、消毒等
  notes         String?   // 任务注意事项
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  plant         Plant     @relation(fields: [plantId], references: [id], onDelete: Cascade)
}

// 打卡记录模型
model CheckIn {
  id            String    @id @default(cuid())
  userId        String
  plantId       String
  notes         String?
  imageUrl      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  plant         Plant     @relation(fields: [plantId], references: [id], onDelete: Cascade)
}

// 网站内容模型
model SiteContent {
  id            String    @id @default(cuid())
  key           String    @unique
  title         String?
  content       String?
  imageUrl      String?
  updatedAt     DateTime  @updatedAt
}

// Recent Activity 帖子模型
model ActivityPost {
  id            String    @id @default(cuid())
  text          String
  imageUrl      String?
  likes         Int       @default(0)
  likedBy       String    @default("[]") // JSON array of user IDs
  userId        String?   // Author user ID
  userName      String?   // Author user name
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}